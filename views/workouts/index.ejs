<%- include('../partials/header') %>


<div class="container d-flex justify-content-center align-items-center vh-100">
  <div class="text-center">
    <h2 class="text-white mb-4">Workout List</h2>
    
    <% workouts.forEach(function(w) { %>
    <div class="card my-1">
      <div class="card-body">
        <h4 class="card-title"><a href="/workouts/<%= w.id %>"><%= w.bodypart %></a></h4>
        <div class="d-flex justify-content-between align-items-center">
          <div class="btn-group">
            <a href="/workouts/<%= w.id %>/edit" class="btn btn-primary">Edit</a>
          </div>
          <form action="/workouts/<%= w.id %>?_method=DELETE" method="POST">
            <input type="submit" value="Delete Workout" class="btn btn-danger">
          </form>
        </div>
      </div>
    </div>
    <% }) %>

    <a href="/workouts/new" class="btn btn-success mt-2">Create Workout Plan</a>
  </div>
</div>

<%- include('../partials/footer') %>
